<body>
  <div class="container">
  <div class="container right-panel">
   
    <!--signup-->
    <div class="container form_signup">
      <form action="" class="form" id="formsignup">
        <h2 class="form_title">Sign up</h2>
        <input type="text" placeholder="User" class="input">
        <input type="email" placeholder="Email" class="input">
        <input type="password" placeholder="Password" class="input"> 
        <button class="btn">Sign up</button>
      </form>
    </div>

    <!--sign in-->
    <div class="container from_signin">
      <h2 class="form title">Sign in</h2>
       <input type="text" placeholder="User" class="input">
       <input type="password" placeholder="Password" class="input"> 
        <button class="btn">Sign in</button>
    </div>

    <!--Overlay-->
    <div class="container_overlay">
      <div class="overlay">
        <div class="overlay_panel overlay-left">
          <h1>Welcome back</h1>
          <p>Login with personal infomation.</p>
          <button class="btn" id="signIn">Sign In</button>
        </div>
        <div class="overlay_panel overlay-right">
          <h1>Welcome to Website</h1>
          <p>If you are the new one please sign up to contact with us</p>
          <button class="btn" id="signUp">Sign Up</button>
        </div> 
      </div>

    </div>

  </div>
  </div>
